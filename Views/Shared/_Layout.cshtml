<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- ⭐ SEO META-TAGGAR -->
    <title>@(ViewData["Title"] != null ? ViewData["Title"] + " - Lite av Allt" : "Lite av Allt - Familjerestaurang Stockholm")</title>
    <meta name="description" content="@(ViewData["Description"] ?? "Familjerestaurang i Stockholm som serverar klassisk husmanskost och italienska favoriter. Boka bord idag!")" />
    <meta name="keywords" content="@(ViewData["Keywords"] ?? "restaurang stockholm, familjerestaurang, husmanskost, italiensk mat, boka bord")" />
    <meta name="language" content="Swedish" />
    <meta name="robots" content="index, follow" />

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurangMVCLab2.styles.css" asp-append-version="true" />

    <!-- Font Awesome för ikoner -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <!-- Brand/Logo -->
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-utensils text-primary me-2"></i>
                    <span class="text-primary">Lite av Allt</span>
                </a>

                <!-- Mobile toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <!-- Vänster navigation -->
                    <ul class="navbar-nav flex-grow-1 me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>
                                Hem
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Menu" asp-action="Index">
                                <i class="fas fa-book-open me-1"></i>
                                Meny
                            </a>
                        </li>
                        <!-- ⭐ BOKNINGSLÄNK FÖR KUNDER (öppnar React-app) -->
                        <li class="nav-item">
                            <a class="nav-link px-3 text-success fw-semibold" href="/boka-bord" target="_blank">
                                <i class="fas fa-calendar-plus me-1"></i>
                                Boka Bord
                                <i class="fas fa-external-link-alt ms-1" style="font-size: 0.7em;"></i>
                            </a>
                        </li>
                    </ul>

                    <!-- Höger navigation -->
                    <ul class="navbar-nav ms-auto">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("JwtToken")))
                        {
                            <!-- INLOGGAD - Expanderad Admin dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-bold px-3" href="#" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false"
                                   style="background: linear-gradient(135deg, #28a745, #20c997); color: white; border-radius: 25px;">
                                    <i class="fas fa-user-shield me-2"></i>
                                    Admin Panel
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0" style="min-width: 280px;">
                                    <!-- Dashboard -->
                                    <li class="px-3 py-2 bg-light border-bottom">
                                        <small class="text-muted fw-bold text-uppercase">
                                            <i class="fas fa-tachometer-alt me-1"></i>Översikt
                                        </small>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="" asp-controller="Admin" asp-action="Index">
                                            <i class="fas fa-chart-line text-primary me-3"></i>
                                            <span>Dashboard</span>
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <!-- Menyhantering -->
                                    <li class="px-3 py-2 bg-light border-bottom">
                                        <small class="text-muted fw-bold text-uppercase">
                                            <i class="fas fa-utensils me-1"></i>Meny
                                        </small>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="" asp-controller="Menu" asp-action="Index">
                                            <i class="fas fa-list text-success me-3"></i>
                                            <span>Visa alla rätter</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="" asp-controller="Menu" asp-action="Create">
                                            <i class="fas fa-plus text-success me-3"></i>
                                            <span>Lägg till ny rätt</span>
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <!-- Bokningshantering -->
                                    <li class="px-3 py-2 bg-light border-bottom">
                                        <small class="text-muted fw-bold text-uppercase">
                                            <i class="fas fa-calendar-check me-1"></i>Bokningar
                                        </small>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-area="" asp-controller="Booking" asp-action="Index">
                                            <i class="fas fa-list text-warning me-3"></i>
                                            <span>Hantera bokningar</span>
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <!-- Bordhantering -->
                                    <li class="px-3 py-2 bg-light border-bottom">
                                        <small class="text-muted fw-bold text-uppercase">
                                            <i class="fas fa-chair me-1"></i>Bord
                                        </small>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Table" asp-action="Index">
                                            <i class="fas fa-list text-info me-3"></i>
                                            <span>Visa alla bord</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Table" asp-action="Create">
                                            <i class="fas fa-plus text-info me-3"></i>
                                            <span>Lägg till nytt bord</span>
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <!-- Logga ut -->
                                    <li class="px-3 py-2 bg-danger bg-opacity-10">
                                        <a class="dropdown-item text-danger py-2 fw-bold" asp-area="" asp-controller="Auth" asp-action="Logout"
                                           onclick="return confirm('Är du säker på att du vill logga ut?')">
                                            <i class="fas fa-sign-out-alt me-3"></i>
                                            <span>Logga ut</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- INTE INLOGGAD - Visa login-länk -->
                            <li class="nav-item">
                                <a class="nav-link px-3" asp-area="" asp-controller="Auth" asp-action="Login"
                                   style="background: linear-gradient(135deg, #007bff, #0056b3); color: white; border-radius: 25px;">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Logga in
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container-fluid">
        <main role="main" class="pb-5">
            <!-- Global Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <!-- Fixed Footer -->
    <footer class="bg-dark text-light mt-auto py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-utensils text-primary me-3 fs-4"></i>
                        <div>
                            <h6 class="mb-1 fw-bold">Lite av Allt</h6>
                            <small class="text-muted">Familjerestaurang sedan 2025</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex justify-content-md-end justify-content-start align-items-center gap-3 mt-3 mt-md-0">
                        <a asp-area="" asp-controller="Home" asp-action="Privacy"
                           class="text-decoration-none text-light">
                            <i class="fas fa-shield-alt me-1"></i>
                            Integritet
                        </a>
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("JwtToken")))
                        {
                            <span class="text-muted">|</span>
                            <a asp-area="" asp-controller="Admin" asp-action="Index"
                               class="text-decoration-none text-success">
                                <i class="fas fa-cogs me-1"></i>
                                Admin
                            </a>
                        }
                        <span class="text-muted">|</span>
                        <small class="text-muted">
                            © @DateTime.Now.Year - Alla rättigheter förbehållna
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Auto-dismiss alerts after 5 seconds -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const successAlerts = document.querySelectorAll('.alert-success');
            successAlerts.forEach(function(alert) {
                setTimeout(function() {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });

            const infoAlerts = document.querySelectorAll('.alert-info');
            infoAlerts.forEach(function(alert) {
                setTimeout(function() {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 7000);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>