@using RestaurangMVCLab2.DTOs
@model List<MenuItemResponseDto>
@{
    ViewData["Title"] = "Vår Meny";
    var token = Context.Session.GetString("JwtToken");
    var isAdmin = !string.IsNullOrEmpty(token);

    // SEO-TILLÄGG - DYNAMISK META-DATA BASERAT PÅ SÖK/KATEGORI */
    var currentSearch = ViewBag.CurrentSearch as string;
    var currentCategory = ViewBag.CurrentCategory as string;

    if (!string.IsNullOrEmpty(currentCategory))
    {
        ViewData["Title"] = $"{currentCategory} - Meny";
        ViewData["Description"] = $"Upptäck våra {currentCategory.ToLower()}-rätter på Lite av Allt. Fräscha ingredienser och traditionella recept.";
        ViewData["Keywords"] = $"{currentCategory.ToLower()}, meny, restaurang stockholm, {currentCategory.ToLower()} stockholm";
    }
    else if (!string.IsNullOrEmpty(currentSearch))
    {
        ViewData["Title"] = $"Sök '{currentSearch}' - Meny";
        ViewData["Description"] = $"Sökresultat för '{currentSearch}' i vår meny. Hitta dina favoriträtter på Lite av Allt.";
        ViewData["Keywords"] = $"{currentSearch}, meny, restaurang stockholm, sök mat";
    }
    else
    {
        ViewData["Title"] = "Vår Meny";
        ViewData["Description"] = "Utforska vår meny med klassisk husmanskost och italienska favoriter. Från svenska rätter till autentisk pasta och pizza.";
        ViewData["Keywords"] = "meny restaurang stockholm, svenska rätter, italiensk mat, husmanskost, pasta, pizza";
    }
            
}

<div class="container mt-4">
    
    <h1 class="mb-4">
        @if (!string.IsNullOrEmpty(currentCategory))
        {
            <span>@currentCategory</span>
        }
        else if (!string.IsNullOrEmpty(currentSearch))
        {
            <span>Sökresultat för "@currentSearch"</span>
        }
        else
        {
            <span>Vår Meny</span>
        }
    </h1>

    @* Success/Error meddelanden *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @* Admin: Lägg till ny rätt *@
    @if (isAdmin)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-success">
                    <i class="fas fa-user-shield"></i> Administratörsläge aktivt
                    <a asp-action="Create" class="btn btn-success ms-3">
                        <i class="fas fa-plus"></i> Lägg till ny rätt
                    </a>
                </div>
            </div>
        </div>
    }

    @* Sök- och filterformulär *@
    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="search" value="@ViewBag.CurrentSearch"
                       class="form-control me-2" placeholder="Sök efter rätter...">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
        <div class="col-md-6">
            @if (ViewBag.Categories != null)
            {
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle w-100"
                            type="button" data-bs-toggle="dropdown">
                        @(ViewBag.CurrentCategory ?? "Alla kategorier")
                    </button>
                    <ul class="dropdown-menu w-100">
                        <li><a class="dropdown-item" href="@Url.Action("Index")">Alla kategorier</a></li>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <li>
                                <a class="dropdown-item"
                                   href="@Url.Action("Index", new { category = category })">@category</a>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>

    @* Felmeddelande *@
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    @* Tom meny *@
    @if (!Model.Any() && ViewBag.ErrorMessage == null)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Inga menyrätter tillgängliga för tillfället.
        </div>
    }

    @* Menyrätter - FIXED VERSION *@
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 position-relative">
                        @* Populär badge - flyttad utanför bilden *@
                        @if (item.IsPopular)
                        {
                            <span class="badge bg-danger position-absolute" style="top: 10px; right: 10px; z-index: 10;">Populär</span>
                        }

                        @* ⭐ BILDOPTIMERING - ALT-TEXT OCH LAZY LOADING *@
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl"
                                 class="card-img-top"
                                 alt="@item.Name - @item.Description"
                                 style="height: 200px; object-fit: cover;"
                                 loading="lazy">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-utensils fa-3x text-muted"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <!-- ⭐ H2 ISTÄLLET FÖR H5 FÖR BÄTTRE SEO-HIERARKI -->
                            <h2 class="card-title h5">@item.Name</h2>
                            <p class="card-text flex-grow-1">@item.Description</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 text-primary mb-0">@item.Price.ToString("C")</span>
                                    <span class="badge bg-secondary">@item.Category</span>
                                </div>
                            </div>
                        </div>

                        @* Admin: Redigera/Ta bort knappar - FIXED *@
                        @if (isAdmin)
                        {
                            <div class="card-footer">
                                <!-- ANVÄND GRID ISTÄLLET FÖR BTN-GROUP -->
                                <div class="row g-1">
                                    <div class="col-12 col-sm-4">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm w-100">
                                            <i class="fas fa-edit"></i> Redigera
                                        </a>
                                    </div>
                                    <div class="col-6 col-sm-4">
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="w-100">
                                            <button type="submit" class="btn btn-danger btn-sm w-100"
                                                    onclick="return confirm('Är du säker på att du vill ta bort denna rätt?')">
                                                <i class="fas fa-trash"></i> <span class="d-none d-sm-inline">Ta bort</span>
                                            </button>
                                        </form>
                                    </div>
                                    <div class="col-6 col-sm-4">
                                        <form asp-action="TogglePopular" asp-route-id="@item.Id" method="post" class="w-100">
                                            <button type="submit" class="btn btn-info btn-sm w-100" title="@(item.IsPopular ? "Ta bort populär" : "Gör populär")">
                                                <i class="fas fa-star"></i> <span class="d-none d-lg-inline">@(item.IsPopular ? "Ej pop" : "Populär")</span>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    /* EXTRA CSS FÖR ATT FIXA KNAPP-PROBLEM */
    .card-footer .btn {
        font-size: 0.8rem;
        padding: 0.25rem 0.5rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Säkerställ samma höjd på alla knappar */
    .card-footer .row .col-12,
    .card-footer .row .col-6,
    .card-footer .row .col-sm-4 {
        min-height: 32px;
        display: flex;
        align-items: stretch;
    }

    .card-footer .btn,
    .card-footer form {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Fix för card-img-top ikoner */
    .card-img-top .fas {
        font-size: 3rem !important;
    }

    /* Responsiv text för knappar */
    @@media (max-width: 576px) {
        .card-footer .btn

    {
        font-size: 0.75rem;
        padding: 0.2rem 0.4rem;
    }

    }

    @@media (min-width: 992px) {
        .card-footer .btn

    {
        font-size: 0.85rem;
    }

    }
</style>