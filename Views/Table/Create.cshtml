@using RestaurangMVCLab2.DTOs
@model CreateTableDto
@{
    ViewData["Title"] = "Skapa nytt bord - Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Header -->
            <div class="text-center mb-4">
                <h2 class="mb-2">
                    <i class="fas fa-plus-circle text-primary me-2"></i>
                    Skapa nytt bord
                </h2>
                <p class="text-muted">Lägg till ett nytt bord i restaurangen</p>
            </div>

            <!-- Error Messages -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Create Form -->
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chair me-2"></i>
                        Bordsinformation
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TableNumber" class="form-label">
                                    <i class="fas fa-hashtag text-primary me-1"></i>
                                    @Html.DisplayNameFor(m => m.TableNumber) *
                                </label>
                                <input asp-for="TableNumber"
                                       class="form-control @(ViewData.ModelState["TableNumber"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       placeholder="t.ex. 1, 2, 3..."
                                       min="1" max="999"
                                       type="number" />
                                <span asp-validation-for="TableNumber" class="invalid-feedback"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Unikt nummer för bordet (1-999)
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Capacity" class="form-label">
                                    <i class="fas fa-users text-primary me-1"></i>
                                    @Html.DisplayNameFor(m => m.Capacity) *
                                </label>
                                <input asp-for="Capacity"
                                       class="form-control @(ViewData.ModelState["Capacity"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                       placeholder="Antal platser"
                                       min="1" max="20"
                                       type="number" />
                                <span asp-validation-for="Capacity" class="invalid-feedback"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Antal personer som får plats (1-20)
                                </div>
                            </div>
                        </div>

                        <!-- Information Box -->
                        <div class="alert alert-info">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-lightbulb fa-lg"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">Tips för bordsskapande:</h6>
                                    <ul class="mb-0 small">
                                        <li>Bordsnummer måste vara unikt</li>
                                        <li>Nya bord blir automatiskt aktiva</li>
                                        <li>Du kan inaktivera bord senare om behov</li>
                                        <li>Kapaciteten används för att matcha bokningar</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index", "Table", new { area = "Admin" })"
                               class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Avbryt
                            </a>

                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Skapa bord
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Preview Section -->
            <div class="card mt-4 bg-light">
                <div class="card-body text-center">
                    <h6 class="text-muted mb-3">
                        <i class="fas fa-eye me-2"></i>
                        Förhandsvisning
                    </h6>
                    <div class="preview-table">
                        <i class="fas fa-chair fa-3x text-primary mb-2" id="tableIcon"></i>
                        <div>
                            <span class="badge bg-primary" id="tablePreview">Bord <span id="previewNumber">-</span></span>
                            <br>
                            <small class="text-muted" id="capacityPreview">- platser</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Live preview
        document.addEventListener('DOMContentLoaded', function() {
            const tableNumberInput = document.getElementById('TableNumber');
            const capacityInput = document.getElementById('Capacity');
            const previewNumber = document.getElementById('previewNumber');
            const capacityPreview = document.getElementById('capacityPreview');

            function updatePreview() {
                const tableNum = tableNumberInput.value || '-';
                const capacity = capacityInput.value || '-';

                previewNumber.textContent = tableNum;
                capacityPreview.textContent = capacity + ' platser';

                // Change icon based on capacity
                const icon = document.getElementById('tableIcon');
                if (capacity <= 2) {
                    icon.className = 'fas fa-chair fa-3x text-primary mb-2';
                } else if (capacity <= 6) {
                    icon.className = 'fas fa-table fa-3x text-primary mb-2';
                } else {
                    icon.className = 'fas fa-users fa-3x text-primary mb-2';
                }
            }

            tableNumberInput.addEventListener('input', updatePreview);
            capacityInput.addEventListener('input', updatePreview);

            // Initial update
            updatePreview();
        });
    </script>
}